<br />
<%= form_for @habit do |f|%>
  <%= f.number_field :type_id, placeholder: "Type of Habit" %>
  <%= f.text_field :description, placeholder: "Description" %>
  <%= f.number_field :weekly_goal, placeholder: "Weekly Goal" %>
  <br />
  <%= f.label :receive_reminder? %>
  <div class="switch">
    <label>
      Off
      <input type="checkbox">
      <span class="lever"></span>
      On
    </label>
  </div>
  <br />
  <br />
  <a class="waves-effect waves-light cyan lighten-2 btn"><i class="material-icons left">add</i>
  <%= f.submit "Add Habit"%>
  </a>
<% end %>
<br />
<br />
<div class="waves-effect waves-light grey lighten-1 btn">
  <%= link_to "Cancel", habits_path, class: 'link-to-text-color' %>
</div>
